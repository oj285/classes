<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uchicago.cs234.spr15.ojshaw.helloworld.GetName"
    android:id="@+id/layout">

    <TextView android:text="@string/whats_your_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_name"
        android:layout_below="@+id/label_name_request"
        android:layout_marginTop="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="John Smith"
        android:layout_alignRight="@+id/label"
        android:layout_alignEnd="@+id/label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button"
        android:layout_below="@+id/field_name"
        android:layout_alignRight="@+id/field_name"
        android:layout_alignEnd="@+id/field_name" />

</RelativeLayout>
